{
  "name": "securamem",
  "version": "1.9.1",
  "description": "ðŸ§  AI Memory Engine - Built by AI, for AI. Persistent, local-only memory for AI coding assistants.",
  "main": "dist/index.js",
  "bin": {
    "smem": "dist/cli.js",
    "securamem": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "typecheck": "tsc --noEmit",
    "start": "node dist/cli.js",
    "clean": "rmdir /s /q dist 2>nul || echo dist cleaned",
    "prepublishOnly": "npm run clean && npm run build",
    "postinstall": "node -e \"if(process.env.CI||process.env.GITHUB_ACTIONS){console.log('Skipping fix-sqlite in CI');process.exit(0)}\" && node scripts/fix-sqlite.js",
    "rebuild-sqlite": "node scripts/fix-sqlite.js",
    "fix-sqlite": "node scripts/fix-sqlite.js",
    "smoke": "node scripts/smoke.js",
    "test": "node scripts/run-tests.js",
    "test:keep-going": "node scripts/run-tests.js --keep-going",
    "sbom": "npm ls --json > sbom.json",
    "build:landing": "node scripts/build-landing.js",
    "verify:landing": "node scripts/verify-landing.js",
    "build:all": "npm run build && npm run build:landing && npm run verify:landing",
    "download-models": "tsx scripts/download-models.ts",
    "download-parsers": "tsx scripts/download-parsers.ts",
    "release:artifacts": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/release-artifacts.ps1",
    "release:artifacts:sign": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/release-artifacts.ps1 -Sign"
  },
  "keywords": [
    "ai",
    "memory",
    "coding-assistant",
    "developer-tools",
    "ai-assistant",
    "persistent-memory",
    "claude",
    "chatgpt",
    "copilot"
  ],
  "author": "SecuraMem Team",
  "license": "MIT",
  "files": [
    "dist/",
    "scripts/fix-sqlite.js",
    "scripts/ensure-sqlite.js",
    "README.md",
    "LICENSE",
    "AI_ASSISTANT_INSTRUCTIONS.md"
  ],
  "homepage": "https://github.com/SecuraMem/smem-cli",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SecuraMem/smem-cli.git"
  },
  "bugs": {
    "url": "https://github.com/SecuraMem/smem-cli/issues"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/chalk": "^0.4.31",
    "@types/chokidar": "^1.7.5",
    "@types/commander": "^2.12.0",
    "@types/fs-extra": "^11.0.4",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^24.2.1",
    "jsonwebtoken": "^9.0.2",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^11.10.0",
    "chalk": "4.1.2",
    "chokidar": "^3.6.0",
    "commander": "^14.0.0",
    "dotenv": "^17.2.1",
    "fflate": "^0.8.2",
    "fs-extra": "^11.3.0",
    "minimatch": "^10.0.3",
    "onnxruntime-node": "^1.22.0-rev",
    "sqlite-vec": "^0.1.7-alpha.2",
    "sqlite-vec-windows-x64": "^0.1.7-alpha.2",
    "sqlite-vss": "^0.1.2",
    "tree-sitter": "^0.21.1",
    "tree-sitter-javascript": "^0.21.4",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-typescript": "^0.21.2",
    "web-tree-sitter": "^0.25.8"
  },
  "overrides": {
    "@npmcli/fs": "^3.1.1",
    "lru-cache": "^11.0.2",
    "proc-log": "^4.2.0",
    "rimraf": "^6.0.1",
    "glob": "^11.0.0",
    "npmlog": "^7.0.1",
    "gauge": "^5.0.1",
    "are-we-there-yet": "^4.0.2",
    "@npmcli/move-file": "^3.0.3",
    "inflight": "^1.0.6",
    "abbrev": "^2.0.0",
    "nopt": "^7.2.1",
    "semver": "^7.6.3",
    "make-dir": "^4.0.0",
    "tar": "^7.4.3",
    "node-gyp": "^10.2.0",
    "@mapbox/node-pre-gyp": "^1.0.11"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
